{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "linebreak-style": "off",
      "no-tabs": "off",
       "indent": ["error", 2, { "SwitchCase": 1 }],
      "max-len": "off",
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
      // "no-param-reassign": [2, { "props": false }]
    }
}
